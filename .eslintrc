{
  "root": true,
  "plugins": [
    "node"
  ],
  "extends": [
    "airbnb-base",
    "plugin:node/recommended"
  ],
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "max-len": [2, 120, 2],
    "no-console": [2],
    "no-restricted-properties": [0],
    "semi": [2, "never"],
    "node/no-unpublished-require": ["error", {
      "allowModules": ["chai", "sinon"]
    }]
  }
}

